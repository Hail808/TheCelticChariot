generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model test {
  test_id Int     @id @default(autoincrement())
  data    String?
}

model users {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Review {
  review_id     Int      @id @default(autoincrement())
  review_text   String
  rating        Int
  review_date   DateTime
  reviewer_name String?

  @@map("reviews")
}

model contact_messages {
  id          Int      @id @default(autoincrement())
  first_name  String
  last_name   String
  email       String
  message     String
  created_at  DateTime @default(now())

  @@map("contact_messages")
}

model commission_requests {
  id            Int      @id @default(autoincrement())
  name          String
  email         String
  details       String
  created_at    DateTime @default(now())

  @@map("commission_requests")
}